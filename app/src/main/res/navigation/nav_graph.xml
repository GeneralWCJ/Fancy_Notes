<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/notesListFragment">

    <fragment
        android:id="@+id/notesListFragment"
        android:name="com.example.fancynotes.FragmentNotesList"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_notes_list" >
        <action
            android:id="@+id/action_notesListFragment_to_fragmmentIndividualNote"
            app:destination="@id/fragmmentIndividualNote" />
    </fragment>
    <fragment
        android:id="@+id/fragmmentIndividualNote"
        android:name="com.example.fancynotes.FragmmentIndividualNote"
        android:label="fragmment_individual_note_fragment"
        tools:layout="@layout/fragmment_individual_note_fragment" >
        <argument
            android:name="note_position"
            app:argType="integer" />
    </fragment>
</navigation>