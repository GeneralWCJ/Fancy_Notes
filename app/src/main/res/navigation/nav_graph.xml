<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/notesListFragment">

    <fragment
        android:id="@+id/notesListFragment"
        android:name="com.example.fancynotes.FragmentNotesList"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_notes_list" >
        <action
            android:id="@+id/action_notesListFragment_to_fragmentIndividualNote"
            app:destination="@id/fragmentIndividualNote" />
    </fragment>
    <fragment
        android:id="@+id/fragmentIndividualNote"
        android:name="com.example.fancynotes.FragmentIndividualNote"
        android:label="{note_title}"
        tools:layout="@layout/fragment_individual_note">
        <argument
            android:name="note_position"
            app:argType="integer" />
        <argument
            android:name="note_title"
            app:argType="string" />
    </fragment>
</navigation>